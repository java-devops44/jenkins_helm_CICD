pipeline{
    agent any 
    environment{

        VERSION = "${env.BUILD_ID}"
    }

    stages {

        stage('sonar quality check'){
    
            steps{

                script{


                    withSonarQubeEnv(credentialsId: 'soanr_auth') {


                        sh 'mvn clean package sonar:sonar'
                    }
                 }
            }

        }
        stage('sonar quality gates'){

            steps{
                
                script{
                    waitForQualityGate abortPipeline: false, credentialsId: 'soanr_auth'
                }
            }
        }

        stage('Docker Build'){

             stpes{
                 script{
                    withCredentials([string(credentialsId: 'nexus-cred', variable: 'nexus_auth')]) {

                        sh """
                        docket build -t  34.224.90.69:8083/springapps:${ERSION} .
                        docker login -u admin --password  $nexus_auth 34.224.90.69:8083
                        docker push 34.224.90.69:8083/springapps:${ERSION}
                        docker rmi 34.224.90.69:8083/springapps:${ERSION}
                        """

            }


                 }
           }
        }

    }
}